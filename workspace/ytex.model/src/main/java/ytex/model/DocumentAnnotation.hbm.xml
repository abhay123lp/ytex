<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ytex.model">
	<class name="DocumentAnnotation" table="anno_base">
		<id name="documentAnnotationID" column="anno_base_id">
			<generator class="native">
				<param name="sequence">anno_base_id_sequence</param>
			</generator>
		</id>
		<property name="begin" column="span_begin" />
		<property name="end" column="span_end" />
		<many-to-one name="uimaType" class="UimaType" column="uima_type_id"
			not-null="true" />
		<many-to-one name="document" class="Document" column="document_id"
			not-null="true" />
		<joined-subclass name="SentenceAnnotation" table="anno_sentence">
			<key column="anno_base_id" />
			<property name="sentenceNumber" column="sentence_number" />
		</joined-subclass>
		<joined-subclass name="NamedEntityAnnotation" table="anno_named_entity">
			<key column="anno_base_id" />
			<property name="discoveryTechnique" column="discovery_technique" />
			<property name="status" column="status" />
			<property name="certainty" column="certainty" />
			<property name="typeID" column="type_id" />
			<property name="confidence" column="confidence" />
			<property name="segmentID" column="segment_id" />
			<bag name="ontologyConcepts" inverse="true">
				<key column="anno_base_id" />
				<one-to-many class="OntologyConceptAnnotation" />
			</bag>
		</joined-subclass>
		<joined-subclass name="SegmentAnnotation" table="anno_segment">
			<key column="anno_base_id" />
			<property name="segmentID" column="segment_id" />
		</joined-subclass>
		<joined-subclass name="ytex.model.DateAnnotation" table="anno_date">
			<key column="anno_base_id" />
			<property name="date" column="tstamp" type="timestamp" />
		</joined-subclass>
		<joined-subclass name="ytex.vacs.model.DocumentDateAnnotation" table="anno_docdate">
			<key column="anno_base_id" />
			<property name="documentDate" column="doc_date" type="timestamp" />
		</joined-subclass>
		<!-- 
		TODO: maybe create mapping for ref_document_type and use that here?
		 -->
		<joined-subclass name="ytex.vacs.model.DocumentKeyAnnotation" table="anno_dockey">
			<key column="anno_base_id" />
			<property name="studyID" column="study_id" />
			<property name="uid" column="uid" />
			<property name="documentTypeID" column="document_type_id" />
			<property name="siteID" column="site_id" />
		</joined-subclass>
		<joined-subclass name="SourceDocumentInformation" table="anno_source_doc_info">
			<key column="anno_base_id" />
			<property name="uri" column="uri"/>
			<property name="offsetInSource" column="offset_in_source"/>
			<property name="documentSize" column="document_size"/>
			<property name="lastSegment" column="last_segment"/>
		</joined-subclass>
		<joined-subclass name="BaseToken" table="anno_base_token">
			<key column="anno_base_id" />
			<property name="tokenNumber" column="token_number"/>
			<property name="normalizedForm" column="normalized_form"/>
			<property name="partOfSpeech" column="part_of_speech"/>
			<joined-subclass name="NumToken" table="anno_num_token">
				<key column="anno_base_id" />
				<property name="numType" column="num_type"/>
			</joined-subclass>
			<joined-subclass name="WordToken" table="anno_word_token">
				<key column="anno_base_id" />
				<property name="capitalization" column="capitalization"/>
				<property name="numPosition" column="num_position"/>
				<property name="suggestion" column="suggestion"/>
				<property name="canonicalForm" column="canonical_form"/>
			</joined-subclass>
		</joined-subclass>
	</class>
</hibernate-mapping>